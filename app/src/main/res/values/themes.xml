<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zeroplus_legal" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/legal</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--<item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!--<style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/Background_Yellow</item>
    </style>-->

    <style name="Theme.Zeroplus_legal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Zeroplus_legal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Zeroplus_legal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Animation Custom Dialog Box-->
    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--SplashScreen-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/legal</item>
        <item name="colorPrimaryDark">@color/legal</item>
        <item name="colorAccent">@color/legal</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Zeroplus_legal.Fullscreen" parent="Theme.Zeroplus_legal">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.Zeroplus_legal.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Zeroplus_legal.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/legal</item>
        <item name="fullscreenTextColor">@color/legal</item>
    </style>

    <style name="Theme.Zeroplus_legal.CustomActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>